                               FontWeight="UltraLight"
                               TextWrapping="Wrap"
                               Text="Введите номера счетов и сумму:"
                               VerticalAlignment="Top"/>

                    <!--Кнопка пополнения счета-->
                    <Button Content="Transfer"
                            HorizontalAlignment="Left"
                            Margin="636,246,0,0"
                            VerticalAlignment="Top"
                            Width="87" Click="Button_TransferToOtherAccount"/>

                    <!--Поле для ввода суммы-->
                    <TextBox x:Name="TheFirstClientAccount2"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="618,97,0,0"
                             TextWrapping="Wrap"
                             Text="{Binding MyText}"
                             VerticalAlignment="Top"
                             Width="120"/>

                    <!--Поле для ввода суммы-->
                    <TextBox x:Name="NumberTheFirstAccount2"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="651,97,0,0"
                             TextWrapping="Wrap"
                             Text="{Binding MyText}"
                             VerticalAlignment="Top"
                             Width="111"/>

                    <TextBlock HorizontalAlignment="Left"
                               Margin="618,77,0,0"
                               TextWrapping="Wrap"
                               Text="The first account:"
                               FontSize="14"
                               VerticalAlignment="Top" Width="120"/>

                    <TextBlock HorizontalAlignment="Left"
                               Margin="618,138,0,0"
                               TextWrapping="Wrap"
                               Text="The second account:"
                               FontSize="14"
                               VerticalAlignment="Top" Width="136"/>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="595,101,0,0"
                               TextWrapping="Wrap"
                               Text="Number:"
                               FontSize="14"
                               VerticalAlignment="Top" Width="56"/>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="599,162,0,0"
                               TextWrapping="Wrap"
                               Text="Number:"
                               FontSize="14"
                               VerticalAlignment="Top" Width="62"/>


                    <!--Поле для ввода суммы-->
                    <TextBox x:Name="NumberTheSecondAccount2"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="651,158,0,0"
                             TextWrapping="Wrap"
                             Text="{Binding MyText}"
                             VerticalAlignment="Top"
                             Width="111"/>
                    <TextBox x:Name="AmountOfMoney2"
                            HorizontalAlignment="Left"
                            Height="23"
                            Margin="618,217,0,0"
                            TextWrapping="Wrap"
                            Text="{Binding MyText}"
                            VerticalAlignment="Top"
                            Width="111"/>
                    
                    <TextBlock HorizontalAlignment="Left"
                               Margin="599,198,0,0"
                               TextWrapping="Wrap"
                               Text="Amount of money(BYN):"
                               FontSize="14"
                               VerticalAlignment="Top" Width="155"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
